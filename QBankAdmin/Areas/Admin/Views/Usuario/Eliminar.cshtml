@model QBankAdmin.Models.Dtos.UsuarioDTO;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<form action="~/Admin/Usuario/Eliminar" method="post">
    <h3>Eliminar usuario</h3>
    <input type="hidden" asp-for="Id" />
    <p>
        ¿Está seguro de eliminar al usuario <span>@Model.Nombre</span>? <br>
        La eliminación será permanente.
    </p>
    <div class="dvBotones">
        <input type="submit" value="Confirmar">
        <a href="~/Admin/Home/Index">Cancelar</a>
    </div>

</form>

