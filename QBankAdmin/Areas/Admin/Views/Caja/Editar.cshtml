@model QBankAdmin.Areas.Admin.Models.ViewModels.CajasViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<form action="~/Admin/Caja/Editar" method="post">
    <h3>Editar caja</h3>
    <input type="hidden" asp-for="Caja.Id" />
    <input type="hidden" asp-for="Caja.Estado"/>
    <input type="text" id="numerocaja" asp-for="Caja.NumeroCaja" placeholder="Número de caja">

    @if (Model.Errores != null)
    {
        foreach (var item in Model.Errores)
        {
            <p class="errores">@item</p>
        }
    }
    
    <div class="dvBotones">
        <input type="submit" value="Guardar">
        <a href="~/Admin/Home/Index">Cancelar</a>
    </div>
   
</form>


