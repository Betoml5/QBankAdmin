@model QBankAdmin.Models.Dtos.CajaDTO;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<form action="~/Admin/Caja/Eliminar" method="post">
    <h3>Eliminar caja</h3>
    <input type="hidden" asp-for="Id" />
    <p>
        ¿Está seguro de eliminar la caja <span>@Model.NumeroCaja</span> con el usuario: <span>@Model.NombreUsuario</span>? <br>
        La eliminación será permanente.
    </p>
    <div class="dvBotones">
        <input type="submit" value="Confirmar">
        <a href="~/Admin/Home/Index">Cancelar</a>
    </div>

</form>

